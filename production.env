# AI Marketing Tools - Production Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=production
FLASK_ENV=production
DEBUG=false

# Database Configuration
DB_HOST=database
DB_PORT=5432
DB_NAME=ai_marketing
DB_USER=marketing_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# API Configuration
API_KEY=CHANGE_THIS_API_KEY_12345
JWT_SECRET=CHANGE_THIS_JWT_SECRET_67890
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# CORS Configuration
CORS_ORIGINS=https://ai-marketing-tools.com,https://www.ai-marketing-tools.com,https://api.ai-marketing-tools.com,https://mobile.ai-marketing-tools.com

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=noreply@ai-marketing-tools.com
SMTP_PASSWORD=CHANGE_THIS_EMAIL_PASSWORD
FROM_EMAIL=noreply@ai-marketing-tools.com

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=CHANGE_THIS_OPENAI_API_KEY
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Monitoring and Alerting
MONITORING_ENABLED=true
MONITORING_INTERVAL=60
ALERT_EMAIL=admin@ai-marketing-tools.com
ALERT_WEBHOOK_URL=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/application.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security Configuration
SECRET_KEY=CHANGE_THIS_SECRET_KEY_ABCDEF
BCRYPT_LOG_ROUNDS=12
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem
FORCE_HTTPS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload Configuration
MAX_CONTENT_LENGTH=50MB
UPLOAD_FOLDER=/app/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=ai_marketing_

# Analytics Configuration
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
SEGMENT_WRITE_KEY=

# Payment Configuration (if using Stripe)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Social Media Integration
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
TWITTER_API_KEY=
TWITTER_API_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# CDN Configuration
CDN_ENABLED=false
CDN_URL=https://cdn.ai-marketing-tools.com
STATIC_URL=/static/

# Feature Flags
FEATURE_CHATBOT_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_EMAIL_CAMPAIGNS_ENABLED=true
FEATURE_SOCIAL_MEDIA_ENABLED=true
FEATURE_API_ACCESS_ENABLED=true

# Performance Configuration
WORKERS=4
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=30
KEEPALIVE=2

# Development/Testing (set to false in production)
TESTING=false
WTF_CSRF_ENABLED=true
SQLALCHEMY_ECHO=false

# Timezone Configuration
TIMEZONE=America/Curacao
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,nl,pap

# Business Configuration
COMPANY_NAME=AI Marketing Tools
COMPANY_EMAIL=info@ai-marketing-tools.com
COMPANY_PHONE=+599-9-XXX-XXXX
COMPANY_ADDRESS=Willemstad, Cura√ßao
SUPPORT_EMAIL=support@ai-marketing-tools.com

# Legal Configuration
PRIVACY_POLICY_URL=https://ai-marketing-tools.com/privacy
TERMS_OF_SERVICE_URL=https://ai-marketing-tools.com/terms
COOKIE_POLICY_URL=https://ai-marketing-tools.com/cookies

# Marketing Configuration
DEFAULT_PLAN=starter
TRIAL_PERIOD_DAYS=14
REFERRAL_BONUS_PERCENTAGE=20
AFFILIATE_COMMISSION_PERCENTAGE=30

# Notification Configuration
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/api/health
HEALTH_CHECK_TIMEOUT=10

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please check back soon.

# Version Information
APP_VERSION=1.0.0
BUILD_NUMBER=
COMMIT_HASH=
